---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Kynetic Core - Science-Based Fitness Supplements">
  <Navigation />

  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
    <div class="absolute inset-0 z-0">
      <img
        src="/images/hero-visual.jpeg"
        alt="Athletic Performance"
        class="w-full h-full object-cover opacity-40"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-kynetic-dark via-kynetic-dark/90 to-transparent"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
      <div class="animate-fade-in-up">
        <h1 class="font-display text-6xl md:text-8xl font-bold mb-6 leading-tight">
          FUEL YOUR
          <span class="text-kynetic-green block mt-2">PERFORMANCE</span>
        </h1>
        <p class="text-xl md:text-2xl text-white/80 mb-8 max-w-2xl mx-auto">
          Science-based fitness supplements engineered to optimize your athletic performance and recovery.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#products"
            class="px-8 py-4 bg-kynetic-green text-black font-bold text-lg rounded-lg hover:bg-kynetic-green/90 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-kynetic-green/30"
          >
            Shop Products
          </a>
          <a
            href="#contact"
            class="px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-bold text-lg rounded-lg border-2 border-white/20 hover:bg-white/20 transition-all duration-300"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>

    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-kynetic-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-24 bg-gradient-to-b from-kynetic-dark to-black/50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-display text-5xl md:text-6xl font-bold mb-6">
          SCIENCE-BACKED <span class="text-kynetic-green">SUPPLEMENTS</span>
        </h2>
        <div class="w-24 h-1 bg-kynetic-green mx-auto"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-lg text-white/80 mb-6 leading-relaxed">
            Kynetic Core is a science-based fitness supplements company dedicated to optimizing athletic performance through evidence-backed formulations. We don't believe in shortcuts or proprietary blends - just pure, effective ingredients at clinically-studied dosages.
          </p>
          <p class="text-lg text-white/80 mb-6 leading-relaxed">
            Every product is engineered with one goal: to help you perform at your peak. Whether you're pushing through intense training sessions, recovering after workouts, or protecting your skin during outdoor activities, we've got you covered.
          </p>
          <div class="grid grid-cols-3 gap-6 mt-8">
            <div class="text-center">
              <div class="text-4xl font-display font-bold text-kynetic-green mb-2">100%</div>
              <div class="text-sm text-white/60">Science-Based</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-display font-bold text-kynetic-green mb-2">0</div>
              <div class="text-sm text-white/60">Artificial Colors</div>
            </div>
            <div class="text-center">
              <div class="text-4xl font-display font-bold text-kynetic-green mb-2">2</div>
              <div class="text-sm text-white/60">Products & Growing</div>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-square rounded-2xl overflow-hidden border-4 border-kynetic-green/30 shadow-2xl shadow-kynetic-green/20">
            <img
              src="/images/hero-visual.jpeg"
              alt="Athletic Performance"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-kynetic-green/10 rounded-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section id="products" class="py-24 bg-black/50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-display text-5xl md:text-6xl font-bold mb-6">
          OUR <span class="text-kynetic-green">PRODUCTS</span>
        </h2>
        <div class="w-24 h-1 bg-kynetic-green mx-auto mb-6"></div>
        <p class="text-xl text-white/80 max-w-2xl mx-auto">
          Premium supplements engineered for peak athletic performance
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Electrolytes Product -->
        <div class="group bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-2xl p-10 border border-white/10 hover:border-kynetic-green/50 transition-all duration-300 hover:transform hover:scale-105 shadow-xl">
          <div class="flex items-center justify-between mb-6">
            <div class="w-20 h-20 bg-kynetic-green/20 rounded-2xl flex items-center justify-center group-hover:bg-kynetic-green/30 transition-colors">
              <svg class="w-10 h-10 text-kynetic-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <span class="bg-kynetic-green/20 text-kynetic-green px-4 py-1 rounded-full text-sm font-bold">ORIGINAL</span>
          </div>
          <h3 class="font-display text-3xl font-bold mb-4">Electrolytes</h3>
          <p class="text-white/70 leading-relaxed mb-6">
            Our flagship hydration formula with optimal electrolyte ratios to maintain peak performance during intense training. Scientifically formulated to replace what you lose through sweat and keep you performing at your best.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-white/80">
              <svg class="w-5 h-5 text-kynetic-green mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Optimal sodium & potassium balance
            </li>
            <li class="flex items-center text-white/80">
              <svg class="w-5 h-5 text-kynetic-green mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Zero artificial colors or sweeteners
            </li>
            <li class="flex items-center text-white/80">
              <svg class="w-5 h-5 text-kynetic-green mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Rapid hydration & recovery
            </li>
          </ul>
        </div>

        <!-- Sunscreen Product -->
        <div class="group bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-2xl p-10 border border-white/10 hover:border-kynetic-green/50 transition-all duration-300 hover:transform hover:scale-105 shadow-xl">
          <div class="flex items-center justify-between mb-6">
            <div class="w-20 h-20 bg-kynetic-green/20 rounded-2xl flex items-center justify-center group-hover:bg-kynetic-green/30 transition-colors">
              <svg class="w-10 h-10 text-kynetic-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <span class="bg-kynetic-green text-black px-4 py-1 rounded-full text-sm font-bold">NEW</span>
          </div>
          <h3 class="font-display text-3xl font-bold mb-4">Sport Sunscreen</h3>
          <p class="text-white/70 leading-relaxed mb-6">
            High-performance sunscreen engineered for athletes. Sweat-resistant, non-greasy formula that stays put during the most intense outdoor training sessions. Protect your skin without compromising performance.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-white/80">
              <svg class="w-5 h-5 text-kynetic-green mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Water & sweat resistant
            </li>
            <li class="flex items-center text-white/80">
              <svg class="w-5 h-5 text-kynetic-green mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Non-greasy, lightweight formula
            </li>
            <li class="flex items-center text-white/80">
              <svg class="w-5 h-5 text-kynetic-green mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Broad spectrum protection
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-24 bg-gradient-to-b from-black/50 to-kynetic-dark">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="font-display text-5xl md:text-6xl font-bold mb-6">
          JOIN THE <span class="text-kynetic-green">MOVEMENT</span>
        </h2>
        <div class="w-24 h-1 bg-kynetic-green mx-auto mb-6"></div>
        <p class="text-xl text-white/80">
          Follow us for product updates, science-backed insights, and exclusive offers.
        </p>
      </div>

      <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 md:p-12 border border-white/10">
        <div class="text-center space-y-6">
          <div class="flex items-center justify-center space-x-4 text-lg">
            <svg class="w-6 h-6 text-kynetic-green" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            <a
              href="https://www.instagram.com/corekynetik/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-kynetic-green transition-colors font-medium"
            >
              @corekynetik
            </a>
          </div>

          <p class="text-white/70">
            Stay updated with new product launches, athlete testimonials, and the latest in sports nutrition science.
          </p>

          <a
            href="https://www.instagram.com/corekynetik/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 bg-kynetic-green text-black font-bold text-lg rounded-lg hover:bg-kynetic-green/90 transition-all duration-300 transform hover:scale-105 shadow-lg shadow-kynetic-green/30 mt-4"
          >
            Follow on Instagram
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 1s ease-out;
  }
</style>
